NAME = template

CXX = c++

CXXFLAGS =  -Wall -Wextra -Werror -std=c++98 

HEADER = Whatever.hpp

SRC = main.cpp

OBJ = $(SRC:%.cpp=%.o)

%.o: %.cpp $(HEADER)
    $(CXX) $(FLAGS) -c $< -o $@

all: $(NAME)

$(NAME): $(OBJ)
    $(CXX) $(FLAGS) $(OBJ) -o $(NAME)

clean:
    rm -f $(OBJ)

fclean: clean
    rm -f $(NAME)

re: fclean all

.PHONY:        all clean fclean re